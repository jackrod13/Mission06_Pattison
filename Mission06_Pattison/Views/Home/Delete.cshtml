@model Mission06_Pattison.Models.Movie

<div class="container mt-4">
    <!-- Page Heading -->
    <h2 class="text-center text-danger fw-bold">Confirm Deletion</h2>
    <h3 class="text-center mb-4">@Model.Title</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Delete Confirmation Form -->
            <form method="post" class="card p-4 shadow-sm bg-light">
                <input type="hidden" asp-for="MovieId" />

                <p class="text-center fw-bold">Are you sure you want to delete this movie?</p>

                <div class="d-flex justify-content-between">
                    <!-- Delete Button -->
                    <button type="submit" class="btn btn-danger">Delete</button>

                    <!-- Cancel Button -->
                    <a class="btn btn-secondary" asp-controller="Home" asp-action="MoviesCollection">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
