@model List<Mission06_Pattison.Models.Movie>

<h2 class="text-center fw-bold mt-4">Movie Collection</h2>

<div class="table-wrapper">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Year</th>
                    <th>Director</th>
                    <th>Rating</th>
                    <th>Edited</th>
                    <th>Lent To</th>
                    <th>Copied To Plex</th>
                    <th>Notes</th>
                    <th class="sticky-column">Actions</th> <!-- Sticky Column -->
                </tr>
            </thead>

            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@(x.Category != null ? x.Category.CategoryName : "Uncategorized")</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@(x.Edited ? "Yes" : "No")</td>
                        <td>@(string.IsNullOrEmpty(x.LentTo) ? "N/A" : x.LentTo)</td>
                        <td>@(x.CopiedToPlex ? "Yes" : "No")</td>
                        <td>@x.Notes</td>

                        <!-- Edit and Delete Buttons -->
                        <td class="sticky-column">
                            <a class="btn btn-warning btn-sm mb-1" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Custom Styling -->
<style>
    /* Ensure the table container is scrollable horizontally */
    .table-wrapper {
        width: 100%;
        overflow-x: auto; /* Enables horizontal scrolling */
        position: relative;
    }

    .table-responsive {
        overflow-x: auto;
        white-space: nowrap; /* Prevents text wrapping */
        padding-bottom: 10px; /* Prevents cut-off at the bottom */
    }

        /* Force scrollbar to always be visible */
        .table-wrapper::-webkit-scrollbar,
        .table-responsive::-webkit-scrollbar {
            height: 12px; /* Ensures a visible scrollbar */
            background: #f1f1f1; /* Light background */
        }

        .table-wrapper::-webkit-scrollbar-thumb,
        .table-responsive::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 5px;
        }

            .table-wrapper::-webkit-scrollbar-thumb:hover,
            .table-responsive::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

    /* Sticky 'Actions' column to stay visible on scroll */
    .sticky-column {
        position: sticky;
        right: 0;
        background-color: white;
        z-index: 3;
        box-shadow: -2px 0px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        min-width: 100px;
    }

        /* Ensure buttons fit well inside the sticky column */
        .sticky-column .btn {
            width: 70px;
        }

    /* Always show scrollbar, even when not scrolling */
    .table-wrapper {
        overflow-x: scroll !important;
        scrollbar-gutter: stable both-edges;
    }
</style>
